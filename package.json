    ],
    "technique": {
      "name": "XPS",
      "chmo": "0000404",
      "iupac": "https://doi.org/10.1351/goldbook.X06716"
    },
    "functionality": {
      "fileTypes": [
        {
          "extension": "vms",
          "manufacturer": "ISO 14976",
          "example": "https://raw.githubusercontent.com/cheminfo/xps-analysis/master/testFiles/assigned.vms"
        }
      ]
    }
